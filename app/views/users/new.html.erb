<h1>Register</h1>

<% flash.each do |type, msg| %>
    <div class="alert alert-danger"><%= msg %></div><br><br>
<% end %>

<%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br><br>

    <%= f.label :email %>
    <%= f.text_field :email %><br><br>

    <%= f.label :password %>
    <%= f.password_field :password %><br><br>

    <%= f.submit "Register" %><br>


<% end %>